<div class="col-lg-6 col-lg-offset-3">
	<div class="well">
		<h4><b>Cambiar la Contraseña</b></h4>
		<div class="row">
			<div class="col-lg-10 col-lg-offset-1">
				<%= form_for(@usuario, url: nueva_clave_path, html: { method: :patch })  do |f| %>
					<% if @usuario.errors.any? %>
						<div class="alert alert-danger alert-dismissable alert-fixed">
							<%= @usuario.errors.first[1] %>
							<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
						</div>   
					<% end %>
					<div class="form-group">
						<%= f.label "Nueva contraseña" %> 
								<% if @minimum_password_length %>
									<em>(<%= @minimum_password_length %> caracteres mínimo)</em>
								<% end %><br />
						<%= f.password_field :password, autocomplete: "off" %>
					</div>
					<div class="form-group">
						<%= f.label "Confirmar nueva contraseña" %>
						<%= f.password_field :password_confirmation, autocomplete: "off" %>
					</div>
					<div class="form-group">
						<%= f.label "Contraseña actual" %> <i>(Se necesita la contraseña actual para confirmar el cambio)</i><br />
						<%= f.password_field :current_password, autocomplete: "off" %>
					</div>
					<div class="form-group">
						<%= submit_tag "Actualizar", class: 'btn btn-primary' %>
					</div>
				<% end %>
				<%= button_to 'Detalle usuario',  user_path(current_user.id), method: :get  %>
			</div>
		</div>
	</div>
</div>
