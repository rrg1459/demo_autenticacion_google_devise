<% if @usuario.errors.any? %>
	<div class="alert alert-danger alert-dismissable alert-fixed">
		<%= @usuario.errors.first[1] %>
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	</div>
<% end %>
<div class="col-lg-6 col-lg-offset-3">
	<div class="well">
		<h4><b>Editar Perfil</b></h4>
		<div class="row">
			<div class="col-lg-10 col-lg-offset-1">
				<%= form_for @usuario do |f| %>
					<div class="form-group">
						<%= f.label :nombre, style: 'font-size: 10px; padding-left: 13px; margin-top: -7px; margin-bottom: -2px;' %>
						<%= f.text_field :nombre, placeholder: 'Escriba su nombre', class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= f.label :apellido, style: 'font-size: 10px; padding-left: 13px; margin-top: -7px; margin-bottom: -2px;' %>
						<%= f.text_field :apellido, placeholder: 'Escriba su apellido', class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= f.label :nombre, 'Usuario', style: 'font-size: 10px; padding-left: 13px; margin-top: -7px; margin-bottom: -2px;' %>
						<%= f.text_field :username, placeholder: 'Escriba su usuario', class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= f.label :nombre, 'Correo', style: 'font-size: 10px; padding-left: 13px; margin-top: -7px; margin-bottom: -2px;' %>
						<%= f.text_field :email, placeholder: 'Escriba su correo', class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= submit_tag "Actualizar", class: 'btn btn-primary' %>
					</div>
				<% end %>
				<%= button_to 'Detalle usuario',  user_path(current_user.id), method: :get  %>
			</div>
		</div>
	</div>
</div>
